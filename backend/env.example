# Exemplo de configuração de ambiente para o backend
# Copie este arquivo para '.env' e ajuste as configurações conforme necessário

# Configurações de desenvolvimento
DEBUG=True
SECRET_KEY=django-insecure-sua-chave-secreta-aqui-substitua-por-uma-real

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuração do banco de dados
# Para desenvolvimento local (SQLite) - descomente a linha abaixo:
DATABASE_URL=sqlite:///db.sqlite3

# Para PostgreSQL - descomente e configure as linhas abaixo:
# DATABASE_URL=postgres://usuario:senha@localhost:5432/nome_do_banco
# DB_NAME=gestao_db
# DB_USER=seu_usuario
# DB_PASSWORD=sua_senha
# DB_HOST=localhost
# DB_PORT=5432

# Configurações de CORS para permitir acesso do frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configurações de Redis (se usar WebSockets em produção)
# REDIS_URL=redis://localhost:6379/0

# Configurações de email (opcional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu_email@gmail.com
# EMAIL_HOST_PASSWORD=sua_senha_de_app

# Configurações de produção (quando fazer deploy)
# DEBUG=False
# SECRET_KEY=sua-chave-super-secreta-para-producao
